{% extends "layout.jinja2" %}

{% block content %}
{% for post in posts %}
 <div class="card" style="width: 30rem;">
  <div class="card-body">
    <h4 class="card-title">{{ post.title}}</h4>
    <h6 class="card-subtitle">{{ post.author }} {{ post.date }}</h6>
    <a href="{{ request.route_url('detail', id=post.id) }}" class="btn btn-info">View</a>
  </div>
</div>
{% endfor %}
{% endblock %} 
