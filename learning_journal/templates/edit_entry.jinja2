{% extends "layout.jinja2" %}

{% block content %}
<form method="post">
     <div class="card" style="width: 30rem;">
      <div class="card-body">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
        <h4 class="card-title"><input name="title" type="text" value="{{ post.title }}"></h4>
        <h3 class="author">{{ post.author }}</h3>
        <h6 class="card-subtitle mb-2 text-muted">{{ post.date }}</h6>
        <textarea name="text" class="form-control" id="exampleFormControlTextarea1" rows="3">{{ post.text }}</textarea>
        <a href="{{ request.route_url('delete', id=post.id) }}" id="{{ post.id }}" class="btn btn-danger">Delete</a>
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
</form>
{% endblock %} 